@model IEnumerable<DatabaseModel.Models.Employee>
@{
    ViewData["Title"] = "Home Page";
}


<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.id</td>
                <td>@emp.fullName</td>
                <td>@emp.gender</td>
                <td>@emp.email</td>
                <td>@emp.salary</td>
            </tr>
        }
    </tbody>
</table>

